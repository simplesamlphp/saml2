<?xml version="1.0"?>
<ruleset name="SimpleSAMLphp SAML2 ruleset">
    <description>
        By default it is less stringent about long lines than other coding standards
    </description>

    <!-- Use this to exclude paths. You can have multiple patterns -->
    <!--<exclude-pattern>*/tests/*</exclude-pattern>-->
    <!--<exclude-pattern>*/other/*</exclude-pattern>-->

    <!-- This is the rule we inherit from. If you want to exlude some specific rules, see the docs on how to do that -->
    <rule ref="PSR12"/>

    <rule ref="Generic.NamingConventions.UpperCaseConstantName.ConstantNotUpperCase">
        <exclude-pattern>**/Assertion.php</exclude-pattern>
        <exclude-pattern>**/EncryptedAssertion.php</exclude-pattern>
    </rule>

    <!-- Ignore files with side effects that we cannot fix -->
    <rule ref="PSR1.Files.SideEffects">
        <exclude-pattern>src/_autoload.php</exclude-pattern>
    </rule>

    <!-- Lines can be a little bit longer before they break the build -->
    <rule ref="Generic.Files.LineLength">
        <exclude-pattern>src/SAML2/Assertion.php</exclude-pattern>
        <exclude-pattern>src/SAML2/ArtifactResolve.php</exclude-pattern>
        <exclude-pattern>src/SAML2/ArtifactResponse.php</exclude-pattern>
        <exclude-pattern>src/SAML2/AuthnRequest.php</exclude-pattern>
        <exclude-pattern>src/SAML2/Binding.php</exclude-pattern>
        <exclude-pattern>src/SAML2/EntityDescriptor.php</exclude-pattern>
        <exclude-pattern>src/SAML2/HTTPPost.php</exclude-pattern>
        <exclude-pattern>src/SAML2/HTTPRedirect.php</exclude-pattern>
        <exclude-pattern>src/SAML2/LogoutRequest.php</exclude-pattern>
        <exclude-pattern>src/SAML2/SOAP.php</exclude-pattern>
        <exclude-pattern>src/SAML2/StatusResponse.php</exclude-pattern>
        <exclude-pattern>src/SAML2/SubjectQuery.php</exclude-pattern>
        <exclude-pattern>src/SAML2/Utils.php</exclude-pattern>
        <exclude-pattern>src/SAML2/Utilities/ArrayCollection.php</exclude-pattern>
        <exclude-pattern>src/SAML2/Utilities/Certificate.php</exclude-pattern>
        <exclude-pattern>src/SAML2/Utilities/Collection.php</exclude-pattern>
        <exclude-pattern>src/SAML2/Utilities/Temporal.php</exclude-pattern>
    </rule>
</ruleset>
