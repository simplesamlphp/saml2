{
    "name": "simplesamlphp/saml2",
    "description": "SAML2 PHP library from SimpleSAMLphp",
    "license": "LGPL-2.1-or-later",
    "authors": [
        {
            "name": "Andreas Åkre Solberg",
            "email": "andreas.solberg@uninett.no"
        },
        {
            "name": "Jaime Pérez Crespo",
            "email": "jaime.perez@uninett.no"
        },
        {
            "name": "Tim van Dijen",
            "email": "tvdijen@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4 || ^8.0",
        "ext-openssl": "*",
        "ext-dom": "*",
        "ext-zlib": "*",

        "psr/log": "~1.1",
        "simplesamlphp/xml-security": "~0.2.1",
        "simplesamlphp/assert": "~0.1.0"
    },
    "require-dev": {
        "mockery/mockery": "~1.3",
        "phpunit/phpunit": "^8.5 || ^9.0",
        "simplesamlphp/simplesamlphp-test-framework": "^1.0.5",
        "squizlabs/php_codesniffer": "~3.5"
    },
    "autoload": {
        "psr-4": {
            "SimpleSAML\\SAML2\\": "src/SAML2"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleSAML\\Test\\SAML2\\": "tests/SAML2/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "v5.0.x-dev"
        }
    }
}
