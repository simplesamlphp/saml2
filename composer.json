{
    "name": "simplesamlphp/saml2",
    "description": "SAML2 PHP library from SimpleSAMLphp",
    "license": "LGPL-2.1-or-later",
    "authors": [
        {
            "name": "Andreas Åkre Solberg",
            "email": "andreas.solberg@uninett.no"
        },
        {
            "name": "Jaime Pérez Crespo",
            "email": "jaime.perez@uninett.no"
        },
        {
            "name": "Tim van Dijen",
            "email": "tvdijen@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-openssl": "*",
        "ext-dom": "*",
        "ext-zlib": "*",

        "psr/log": "~1.1",
        "simplesamlphp/xml-common": "~0.0.9",
        "simplesamlphp/xml-security": "~0.0.5",
        "simplesamlphp/assert": "~0.0.12"
    },
    "require-dev": {
        "mockery/mockery": "~1.3",
        "phpunit/phpunit": "^8.5",
        "simplesamlphp/simplesamlphp-test-framework": "^1.0.1",
        "sensiolabs/security-checker": "~6.0",
        "squizlabs/php_codesniffer": "~3.5",
        "vimeo/psalm": "~3.14"
    },
    "autoload": {
        "psr-4": {
            "SimpleSAML\\SAML2\\": "src/SAML2"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleSAML\\SAML2\\": "tests/SAML2/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "v4.2.x-dev"
        }
    }
}
