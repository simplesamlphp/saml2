{
    "name": "simplesamlphp/saml2",
    "description": "SAML2 PHP library from SimpleSAMLphp",
    "license": "LGPL-2.1-or-later",
    "authors": [
        {
            "name": "Andreas Ã…kre Solberg",
            "email": "andreas.solberg@uninett.no"
        }
    ],
    "config": {
        "platform": {
            "php": "7.2.31"
        }
    },
    "require": {
        "php": ">=7.2",
        "ext-openssl": "*",
        "ext-dom": "*",
        "ext-zlib": "*",

        "psr/log": "~1.1",
        "robrichards/xmlseclibs": "^3.1.0",
        "simplesamlphp/assert": "^0.0.12"
    },
    "require-dev": {
        "mockery/mockery": "~1.3",
        "phpunit/phpunit": "^8.5",
        "simplesamlphp/simplesamlphp-test-framework": "~0.1.14",
        "sensiolabs/security-checker": "~6.0",
        "squizlabs/php_codesniffer": "~3.5",
        "vimeo/psalm": "~3.11"
    },
    "autoload": {
        "psr-4": {
            "SAML2\\": "src/SAML2"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SAML2\\": "tests/SAML2/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "v4.2.x-dev"
        }
    }
}
